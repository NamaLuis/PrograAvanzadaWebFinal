@model UI.Login.Models.Puesto

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>¿Esta seguro de borrar este puesto?</h3>
<div>
    <h4>Puesto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Nombre")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Manager")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manager)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPuesto" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la Lista</a>
    </form>
</div>

