@model IEnumerable<UI.Login.Models.Proveedor>

@{
    ViewData["Title"] = "Index";
}

<h1>Proveedores</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table table-dark table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nombre")
            </th>
            <th>
                @Html.DisplayName("Teléfono")
            </th>
            <th>
                @Html.DisplayName("Ubicación")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ubicacion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdProveedor">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdProveedor">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdProveedor">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

