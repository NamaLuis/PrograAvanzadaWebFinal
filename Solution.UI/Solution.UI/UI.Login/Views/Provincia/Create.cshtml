@model UI.Login.Models.Provincia

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Provincia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="IdProvincia" class="control-label">Número de Provincia</label>
                    <input asp-for="IdProvincia" class="form-control" />
                    <span asp-validation-for="IdProvincia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NombreProvincia" class="control-label">Nombre</label>
                    <input asp-for="NombreProvincia" class="form-control" />
                    <span asp-validation-for="NombreProvincia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Volver a la Lista</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
