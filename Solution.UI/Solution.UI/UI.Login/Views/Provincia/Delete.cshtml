@model UI.Login.Models.Provincia

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>¿Esta seguro de borrar esta provincia?</h3>
<div>
    <h4>Provincia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Nombre")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreProvincia)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProvincia" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la Lista</a>
    </form>
</div>
